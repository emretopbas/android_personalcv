<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".educationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/educationround"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="#64B5F6"
                android:gravity="center">
            </TextView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border">
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="School Name : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Bahçeşehir University  (transfer)"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Date : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text=" 2016 - 2020  "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="GPA : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text=" 2,30/4,00 "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Major : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Computer Engineering (English) "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Faculty : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Engineering and Natural Sciences "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Scholarship : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text=" %50 Scholarship "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/border">
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="School Name : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Çanakkale 18 Mart University "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Date : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="2015 - 2016"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Major : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Computer Engineering (English) "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Faculty : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Engineering Faculty "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
            </TableLayout>
            <TableLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/border">
            <TableRow
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="School Name : "
                    android:textColor="#64B5F6"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="Uğur Koleji "
                    android:textColor="#64B5F6"
                    android:gravity="center">
                </TextView>
            </TableRow>
            <TableRow
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/border">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="Date : "
                    android:textColor="#64B5F6"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:text="2011 - 2015"
                    android:textColor="#64B5F6"
                    android:gravity="center">
                </TextView>
            </TableRow>
        </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>