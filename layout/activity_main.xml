<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="15dp"
    tools:context=".MainActivity">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/emre"
            >
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMRE TOPBAÅž"
            android:textColor="#64B5F6"
            android:gravity="center"
            android:textSize="20dp"
            ></TextView>
        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/personal"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/personal"
                    android:background="@drawable/roundedbutton"
                    ></ImageButton>


                <ImageButton
                    android:layout_marginLeft="35dp"
                    android:id="@+id/education"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/education"
                    android:background="@drawable/roundedbutton"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="#64B5F6"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:text="Education"
                    android:textColor="#64B5F6"
                    android:gravity="center"
                    android:layout_weight="1"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="19dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/work"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/work"
                    android:adjustViewBounds="true"
                    android:background="@drawable/roundedbutton">
                </ImageButton>
                <ImageButton
                    android:id="@+id/reference"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/reference"
                    android:background="@drawable/roundedbutton"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="35dp"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Exprience"
                    android:textColor="#64B5F6"
                    android:layout_weight="1"
                    android:width="0dp"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="0dp"
                    android:text="References"
                    android:textColor="#64B5F6"
                    android:gravity="center"
                    android:layout_weight="1"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>