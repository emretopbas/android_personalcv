<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".refactivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/refroundimg"
                android:layout_gravity="center">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="References"
                android:textColor="#64B5F6"
                android:gravity="center">
            </TextView>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/border">
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Name Surname : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Hüsnü Türmen"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Company Name : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#64B5F6"
                        android:text="Aktif Yatırım Bankası A.Ş.">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Department : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="IT (Outsource Team)"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:background="@drawable/border">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Role : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:text="Head of Outsource Team"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="Phone Number : "
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:text="0(532) 581 45 01"
                        android:textColor="#64B5F6"
                        android:gravity="center">
                    </TextView>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>